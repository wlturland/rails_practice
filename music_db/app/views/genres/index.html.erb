<p id="notice"><%= notice %></p>

<h1>Listing Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name.capitalize %></td>
        <td><%= link_to 'Show', genre, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, class: "btn btn-success" %>
