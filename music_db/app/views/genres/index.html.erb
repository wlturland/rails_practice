<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.order('name').each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td class= "btn-group btn-group-sm" role="group">
          <%= link_to 'Show', genre, class:"btn btn-info" %>
          <%= link_to 'Edit', edit_genre_path(genre), class:"btn btn-warning" %>
          <%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, class: "btn btn-success" %>