<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.order('name').each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre.name %></td>
        <td class= "btn-group btn-group-sm" role="group">
          <%= link_to 'Show', artist, class:"btn btn-info" %>
          <%= link_to 'Edit', edit_artist_path(artist), class:"btn btn-warning" %>
          <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: "btn btn-success" %>